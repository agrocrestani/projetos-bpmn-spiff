{
  "title": "Dropdown list",
  "description": "A dropdown list with options pulled form existing Task Data. IMPORTANT - Add 'fruits' to Task Data before using this component!!!",
  "type": "object",
  "required": [
    "firstName"
  ],
  "properties": {
    "cnpj": {
      "type": "string",
      "title": "CNPJ"
    },
    "ie": {
      "type": "string",
      "title": "Inscrição Estadual"
    },
    "tipoPn": {
      "title": "Select your favorite fruit",
      "type": "string",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "1"
          ],
          "title": "Ambos"
        },
        {
          "type": "string",
          "enum": [
            "2"
          ],
          "title": "Cliente"
        },
        {
          "type": "string",
          "enum": [
            "3"
          ],
          "title": "Fornecedor"
        }
      ]
    }
  }
}