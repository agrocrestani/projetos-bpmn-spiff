{
  "type": "object",
  "required": [
    "BPLId",
    "Department",
    "U_RSD_Prioridade",
    "U_RSD_Aplicacao",
    "OcrCode",
    "OcrCode3",
    "WhsCode",
    "MainUsage",
    "RequiredDate",
    "qtdeColaboradores",
    "periodo"
  ],
  "properties": {
    "BPLId": {
      "title": "Filial",
      "type": "string",
      "anyOf": {{n_filiais|tojson}}
    },
    "RequiredDate": {
      "type": "string",
      "format": "date",
      "title": "Data Necessária",
      "validationErrorMessage": "Date must be today's date or later"
    },
    "Department": {
      "title": "Departamento",
      "type": "string",
      "default": "18",]
      
      "anyOf": [
        "options_from_task_data_var:n_departamentos"
      ]
    },
    "U_RSD_Prioridade": {
      "title": "Prioridade",
      "type": "string",
      "default": "1",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "1"
          ],
          "title": "Normal"
        },
        {
          "type": "string",
          "enum": [
            "2"
          ],
          "title": "Urgente"
        },
        {
          "type": "string",
          "enum": [
            "3"
          ],
          "title": "Fora Processo"
        }
      ]
    },
    "U_RSD_Aplicacao": {
      "title": "Tipo Requisicao",
      "type": "string",
      "default": "2",
      "anyOf": [
        "options_from_task_data_var:n_tipo_requisicao"
      ]
    },
    "OcrCode": {
      "title": "Centro de Custo",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:n_centros_de_custo"
      ]
    },
    "OcrCode2": {
      "title": "Cultura",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:n_culturas"
      ]
    },
    "OcrCode3": {
      "title": "Safra",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:n_safras"
      ]
    },
    "WhsCode": {
      "title": "Deposito",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:n_almoxarifados"
      ]
    },
    "MainUsage": {
      "title": "Utilizacao",
      "type": "string",
      "default": "12",
      "anyOf": [
        "options_from_task_data_var:n_utilizacoes"
      ]
    },
    "Comments": {
      "type": "string",
      "title": "Observações",
      "description": "A sua observação pode ter no máximo 250 caracteres, o que é aceito pelo SAP.",
      "maxLength": 250
    },
    "qtdeColaboradores": {
      "title": "Quantidade de pessoas",
      "type": "number"
    },
    "periodo": {
      "title": "Periodo",
      "type": "string",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "7"
          ],
          "title": "07 - Semanal"
        },
        {
          "type": "string",
          "enum": [
            "15"
          ],
          "title": "15 - Quinzenal"
        },
        {
          "type": "string",
          "enum": [
            "30"
          ],
          "title": "30 - Mensal"
        }
      ]
    }
  }
}