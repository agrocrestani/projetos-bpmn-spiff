{
  "title": "Solicitação de Compras",
  "description": "Solicitação de compras de items para estoque",
  "type": "object",
    "required": [
      "BPLId",
      "Department",
      "U_RSD_Prioridade",
      "U_RSD_Aplicacao",
      "OcrCode",
      "OcrCode3",
      "WhsCode",
      "MainUsage",
      "solicitacao",
      "RequiredDate"
    ],
  "properties": {
    "BPLId": {
      "title": "Filial",
      "type": "string",
      "anyOf": {{n_filiais|tojson}}
    },
    "RequiredDate": {
      "type": "string",
      "format": "date",
      "title": "Data Necessária",
      "validationErrorMessage": "Date must be today's date or later"
    },
    "Department": {
      "title": "Departamento",
      "type": "string",
      "anyOf": {{n_departamentos|tojson}}
    },
    "U_RSD_Prioridade": {
      "title": "Prioridade",
      "type": "string",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "1"
          ],
          "title": "Normal"
        },
        {
          "type": "string",
          "enum": [
            "2"
          ],
          "title": "Urgente"
        },
        {
          "type": "string",
          "enum": [
            "3"
          ],
          "title": "Fora Processo"
        }
      ]
    },
    "U_RSD_Aplicacao": {
      "title": "Tipo Requisicao",
      "type": "string",
      "anyOf": {{n_tipo_requisicao|tojson}}
    },
    "OcrCode": {
      "title": "Centro de Custo",
      "type": "string",
      "anyOf": {{n_centros_de_custo|tojson}}
    },
    "OcrCode2": {
      "title": "Cultura",
      "type": "string",
      "anyOf": {{n_culturas|tojson}}
    },
    "OcrCode3": {
      "title": "Safra",
      "type": "string",
      "anyOf": {{n_safras|tojson}}
    },
    "WhsCode": {
      "title": "Deposito",
      "type": "string",
      "anyOf": {{n_almoxarifados|tojson}}
    },
    "MainUsage": {
      "title": "Utilizacao",
      "type": "string",
      "anyOf": {{n_utilizacoes|tojson}}
    },
    "Comments": {
      "type": "string",
      "title": "Observações",
      "description": "A sua observação pode ter no máximo 250 caracteres, o que é aceito pelo SAP.",
      "maxLength": 250
    },
    "solicitacao": {
      "type": "array",
      "title": "Item",
      "items": {
        "type": "object",
        "required": [
          "item",
          "quantidade"
        ],
        "properties": {
          "item": {
            "type": "string",
            "title": "Selecione o Item"
          },
          "quantidade": {
            "type": "number",
            "title": "Quantidade"
          }
        }
      }
    }
  }
}