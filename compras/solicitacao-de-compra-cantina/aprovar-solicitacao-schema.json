{
  "description": "Verifique os itens da solicitação e confirme para enviar a solicitação aprovação.",
  "type": "object",
  
  "properties": {
    "operacao": {
      "title": "Confirma ou corrige?",
      "type": "string",
      "enum": [
        "Confirma",
        "Corrige"
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "operacao": {
            "const": "Corrige"
          }
        }
      },
      "then": {
        "properties": {
          "comments": {
            "type": "string"
          }
        },
        "required": [
          "comments"
        ]
      }
    }
  ]
}