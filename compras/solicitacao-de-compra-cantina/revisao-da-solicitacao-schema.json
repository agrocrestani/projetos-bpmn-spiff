{
  "description": "Verifique os itens da solicitação e confirme para enviar a solicitação aprovação.",
  "type": "object",
  "properties": {
    "operacao": {
      "title": "Confirma ou corrige?",
      "type": "string",
      "enum": [
        "Confirma",
        "Corrige"
      ]
    },
    "allOf": [
    {
      "if": {
        "properties": {
          "acao": {
            "const": "Confirma"
          }
        }
      },
      "then": {
        "properties": {
          "food": {
            "type": "string",
            "enum": [
              "meat",
              "grass",
              "fish"
            ]
          }
        },
        "required": [
          "food"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "acao": {
            "const": "Corrige"
          }
        }
      },
      "then": {
        "properties": {
          "food": {
            "type": "string",
            "enum": [
              "insect",
              "worms"
            ]
          },
          "water": {
            "type": "string",
            "enum": [
              "lake",
              "sea"
            ]
          }
        },
        "required": [
          "food",
          "water"
        ]
      }
    },
    {
      "required": [
        "animal"
      ]
    }
  ]
  }
}