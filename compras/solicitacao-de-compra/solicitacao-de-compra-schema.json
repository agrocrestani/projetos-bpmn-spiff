{
  "title": "Multiple Choice List",
  "description": "Build a multiple choice list with a predefined list of options",
  "type": "object",
  "properties": {
    "filialSolicitacao": {
      "title": "Filial",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:n_filiais"
      ]
    },
    "departamentoSolicitacao": {
      "title": "Departamento",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:departamentos"
      ]
    },
    "tipoRequisicaoSolicitacao": {
      "title": "Tipo de Requisição",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:tipo_requisicao"
      ]
    },
    "prioridadeSolicitacao": {
      "title": "Prioridade",
      "type": "string",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            ""
          ],
          "title": ""
        },
        {
          "type": "string",
          "enum": [
            "1"
          ],
          "title": "Normal"
        },
        {
          "type": "string",
          "enum": [
            "2"
          ],
          "title": "Urgente"
        },
        {
          "type": "string",
          "enum": [
            "3"
          ],
          "title": "Fora Processo"
        }
      ]
    },
    "multipleChoicesList": {
      "type": "array",
      "title": "A multiple choices list",
      "items": {
        "type": "string",
        "enum": [
          "foo",
          "bar",
          "fuzz",
          "qux"
        ]
      },
      "uniqueItems": true
    }
  }
}