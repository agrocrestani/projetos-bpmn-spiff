{
  "title": "Dropdown list",
  "description": "A dropdown list with options pulled form existing Task Data. IMPORTANT - Add 'fruits' to Task Data before using this component!!!",
  "type": "object",
  "properties": {
    "filialSolicitacao": {
      "title": "Selecione a filial:",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:n_filiais"
      ]
    },
    "departamentoSolicitacao": {
      "title": "Selecione o Departamento",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:departamentos"
      ]
    },
    "tipoRequisicaoSolicitacao": {
      "title": "Selecione o Tipo de Requisição",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:tipo_requisicao"
      ]
    },
    "prioridadeSolicitacao": {
      "title": "Selecione a prioridade",
      "type": "string",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "1"
          ],
          "title": "Normal"
        },
        {
          "type": "string",
          "enum": [
            "2"
          ],
          "title": "Green"
        },
        {
          "type": "string",
          "enum": [
            "#0000ff"
          ],
          "title": "Blue"
        }
      ]
    }
  }
}