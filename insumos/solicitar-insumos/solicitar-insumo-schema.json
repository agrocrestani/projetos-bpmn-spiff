{
  "title": "Dropdown list",
  "description": "A dropdown list with options pulled form existing Task Data. IMPORTANT - Add 'fruits' to Task Data before using this component!!!",
  "type": "object",
  "properties": {
    "solicitacao": {
      "type": "array",
      "title": "",
      "items": {
        "type": "object",
        "required": [
          "insumo",
          "quantidade"
        ],
        "properties": {
          "insumo": {
            "type": "string",
            "title": "Selecione o Insumo"
          },
          "quantidade": {
            "type": "number",
            "title": "Quantidade"
          }
        }
      }
    },
    "favoriteFruit": {
      "title": "Select your favorite fruit",
      "type": "string",
      "anyOf": [
        "options_from_task_data_var:fruits"
      ]
    }
  }
}